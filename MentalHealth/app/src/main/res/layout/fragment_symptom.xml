<?xml version="1.0" encoding="utf-8"?>
<FrameLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fragment_container_view"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SymptomFragment">


    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >

        <!--Edit text to enter course name-->
        <EditText
            android:id="@+id/idEdtSymptomRating"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:hint="Enter the name of symptom" />

        <!--edit text for course description-->
        <EditText
            android:id="@+id/idEdtSymptomDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:hint="Enter a description about your symptom" />

        <EditText
            android:id="@+id/idEdtOldSymptomDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:hint="Enter the old description" />

        <!--button for adding new course-->
        <Button
            android:id="@+id/idBtnAddSymptom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="Add Symptom Entry"
            android:textAllCaps="false" />

        <!--new button for opening our course list activity-->
        <Button
            android:id="@+id/idBtnReadSymptom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="Read All SymptomEntries"
            android:textAllCaps="false" />
        <Button
            android:id="@+id/idBtnDeleteSymptom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:textAllCaps="false"
            android:text="Delete SymptomEntries"
            />
        <Button
            android:id="@+id/idBtnUpdateSymptom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:textAllCaps="false"
            android:text="Update Symptom Entry"
            />

        `

        <ListView
            android:id="@+id/symptomlist"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </LinearLayout>

</FrameLayout>