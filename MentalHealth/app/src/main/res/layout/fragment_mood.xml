<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MoodFragment">


    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".MoodActivity">

        <!--Edit text to enter course name-->
        <EditText
            android:id="@+id/idEdtMoodRating"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:hint="Enter a Mood Rating between 0 to 10" />

        <!--edit text for course description-->
        <EditText
            android:id="@+id/idEdtMoodDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:hint="Enter a description about your mood" />

        <!--button for adding new course-->
        <Button
            android:id="@+id/idBtnAddCourse"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="Add Mood Entry"
            android:textAllCaps="false" />

        <!--new button for opening our course list activity-->
        <Button
            android:id="@+id/idBtnReadCourse"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="Read All Mood Entries"
            android:textAllCaps="false" />



    </LinearLayout>

</FrameLayout>