<?xml version="1.0" encoding="utf-8"?>
<FrameLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fragment_container_view"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MoodFragment">


    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".MoodActivity">

        <!--Edit text to enter course name-->
        <EditText
            android:id="@+id/idEdtMoodRating"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:hint="Enter a Mood Rating between 0 to 10" />

        <!--edit text for course description-->
        <EditText
            android:id="@+id/idEdtMoodDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:hint="Enter a description about your mood" />

        <EditText
            android:id="@+id/idEdtOldMoodDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:hint="Enter the old description" />

        <!--button for adding new course-->
        <Button
            android:id="@+id/idBtnAddMood"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="Add Mood Entry"
            android:textAllCaps="false"
            android:visibility="invisible"/>

        <!--new button for opening our course list activity-->
        <Button
            android:id="@+id/idBtnReadMood"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="Read All Mood Entries"
            android:textAllCaps="false" />
        <Button
            android:id="@+id/idBtnDeleteAllMoods"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:textAllCaps="false"
            android:text="Delete Mood Entries"
            />
        <Button
            android:id="@+id/idBtnUpdateMood"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:textAllCaps="false"
            android:text="Update Mood Entry"
            />

`
        <ListView
            android:id="@+id/list"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

    </LinearLayout>

</FrameLayout>